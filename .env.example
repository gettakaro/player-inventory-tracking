# Server port
PORT=3000

# Takaro API URL (optional, defaults to https://api.takaro.io)
TAKARO_API_URL=https://api.takaro.io

# ============================================
# SERVICE MODE (auto-login at startup)
# ============================================
# Set these to enable service mode - the app will auto-authenticate
# using these credentials at startup. No login form required.

# Your Takaro username (email)
TAKARO_USERNAME=

# Your Takaro password
TAKARO_PASSWORD=

# Your Takaro domain ID (required for service mode)
# You can find this in your Takaro dashboard URL or domain settings
TAKARO_DOMAIN=
