{
  "name": "takaro-player-map",
  "version": "1.0.2",
  "description": "7 Days to Die player map with movement history tracking via Takaro",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "tsc",
    "build:frontend": "node esbuild.config.mjs",
    "start": "node dist/server.js",
    "dev": "npm run build && node --watch dist/server.js",
    "dev:watch": "tsc --watch & node esbuild.config.mjs --watch",
    "restart": "docker-compose up -d && pkill -f 'node dist/server.js' ; npm run build && node dist/server.js",
    "stop": "pkill -f 'node dist/server.js' ; docker-compose down",
    "docker:build": "docker build -t takaro-player-map .",
    "docker:dev": "docker-compose up",
    "docker:down": "docker-compose down -v",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci:check": "biome ci ."
  },
  "dependencies": {
    "@takaro/apiclient": "^0.4.10",
    "axios": "^1.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "redis": "^5.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet-draw": "^1.0.13",
    "@types/leaflet.heat": "^0.2.5",
    "@types/node": "^25.0.6",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
